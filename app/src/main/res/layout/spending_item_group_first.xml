<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="10dp"
    android:background="@drawable/bottom_border"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/group_title_id"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:paddingTop="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/spendings_item_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_below="@id/group_title_id"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_above="@id/spendings_item_name"/>

    <TextView
        android:id="@+id/spendings_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/spendings_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spendings_item_amount"
        android:layout_toLeftOf="@+id/spendings_delete_id"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#c1bdbd"/>

    <CheckBox
        android:id="@+id/spendings_delete_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/spendings_item_amount"
        android:visibility="invisible"
        android:buttonTint="#2196f3"/>

</RelativeLayout>